<% layout('layouts/boilerplate') %>
<section class="hero-section">
  <div class="hero-content">
    <h1>Welcome to <span class="brand">StaySphere</span></h1>
    <p class="lead">Discover, book, and enjoy unique stays and experiences around the world.</p>
    <div class="home-actions">
      <% if (!currentUser) { %>
        <a href="/login" class="btn btn-primary btn-lg">Login</a>
        <a href="/signup" class="btn btn-outline-primary btn-lg">Sign Up</a>
      <% } else { %>
        <a href="/listings" class="btn btn-success btn-lg">Go to Listings</a>
      <% } %>
    </div>
  </div>
  <img src="/css/hero-staysphere.png" alt="StaySphere Hero" class="hero-img">
</section>

<section class="features-section">
  <div class="feature">
    <img src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=400&q=80" alt="Easy Booking">
    <h3>Effortless Booking</h3>
    <p>Find and reserve your perfect stay in just a few clicks, with real-time availability and instant confirmation.</p>
  </div>
  <div class="feature">
    <img src="https://images.unsplash.com/photo-1464983953574-0892a716854b?auto=format&fit=crop&w=400&q=80" alt="Trusted Reviews">
    <h3>Trusted Reviews</h3>
    <p>Read honest feedback from real guests to help you choose the best place for your next adventure.</p>
  </div>
  <div class="feature">
    <img src="https://images.unsplash.com/photo-1512918728675-ed5a9ecdebfd?auto=format&fit=crop&w=400&q=80" alt="Secure Payments">
    <h3>Secure Payments</h3>
    <p>Your safety is our priority. All transactions are encrypted and protected for peace of mind.</p>
  </div>
  <div class="feature">
    <img src="https://images.unsplash.com/photo-1504384308090-c894fdcc538d?auto=format&fit=crop&w=400&q=80" alt="24/7 Support">
    <h3>24/7 Support</h3>
    <p>Our team is always here to help, no matter where you are in the world, any time of day.</p>
  </div>
</section>

<section class="cta-section">
  <h2>Start your journey with StaySphere today!</h2>
  <a href="/signup" class="btn btn-lg btn-primary">Join Now</a>
</section>

<style>
.hero-section {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(120deg, #e0e7ef 60%, #f0f4ff 100%);
  border-radius: 18px;
  margin: 2rem 0;
  box-shadow: 0 8px 32px rgba(0,0,0,0.08);
  padding: 2.5rem 2rem 2rem 2rem;
  min-height: 350px;
}
.hero-content {
  flex: 1 1 350px;
  min-width: 300px;
  text-align: left;
}
.hero-section h1 {
  font-size: 2.7rem;
  font-weight: 800;
  color: #2563eb;
  margin-bottom: 1rem;
}
.hero-section .brand {
  color: #0d6efd;
}
.hero-section .lead {
  font-size: 1.3rem;
  color: #475569;
  margin-bottom: 2rem;
}
.hero-section .home-actions {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}
.hero-img {
  flex: 1 1 350px;
  max-width: 420px;
  width: 100%;
  border-radius: 18px;
  margin-left: 2rem;
  box-shadow: 0 4px 24px rgba(0,0,0,0.10);
  object-fit: cover;
}
.features-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 2rem;
  margin: 3rem 0 2rem 0;
}
.feature {
  flex: 1 1 220px;
  min-width: 220px;
  max-width: 300px;
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.07);
  padding: 1.5rem 1rem;
  text-align: center;
  margin: 0 auto;
}
.feature img {
  width: 100%;
  height: 140px;
  object-fit: cover;
  border-radius: 10px;
  margin-bottom: 1rem;
}
.feature h3 {
  color: #2563eb;
  font-size: 1.2rem;
  margin-bottom: 0.5rem;
}
.feature p {
  color: #475569;
  font-size: 1rem;
}
.cta-section {
  text-align: center;
  margin: 3rem 0 2rem 0;
}
.cta-section h2 {
  font-size: 2rem;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 1.2rem;
}
.cta-section .btn {
  font-size: 1.2rem;
  padding: 0.8rem 2.2rem;
  border-radius: 8px;
}
@media (max-width: 900px) {
  .hero-section {
    flex-direction: column;
    text-align: center;
    padding: 2rem 1rem;
  }
  .hero-img {
    margin: 2rem 0 0 0;
    max-width: 100%;
  }
  .features-section {
    flex-direction: column;
    align-items: center;
  }
}
</style>
