<% layout('layouts/boilerplate') %>
<div class="home-hero">
  <div class="home-content">
    <h1>Welcome to StaySphere</h1>
    <p class="lead">Find your perfect stay, anywhere, anytime.</p>
    <div class="home-actions">
      <% if (!currentUser) { %>
        <a href="/login" class="btn btn-primary btn-lg">Login</a>
        <a href="/signup" class="btn btn-outline-primary btn-lg">Sign Up</a>
      <% } else { %>
        <a href="/listings" class="btn btn-success btn-lg">Go to Listings</a>
      <% } %>
    </div>
  </div>
</div>
<style>
.home-hero {
  min-height: 70vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(120deg, #e0e7ef 60%, #f0f4ff 100%);
  border-radius: 18px;
  margin: 2rem 0;
  box-shadow: 0 8px 32px rgba(0,0,0,0.08);
}
.home-content {
  text-align: center;
  padding: 2rem 1rem;
}
.home-content h1 {
  font-size: 2.5rem;
  font-weight: 800;
  color: #2563eb;
  margin-bottom: 1rem;
}
.home-content .lead {
  font-size: 1.2rem;
  color: #475569;
  margin-bottom: 2rem;
}
.home-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}
@media (max-width: 600px) {
  .home-hero {
    min-height: 50vh;
    margin: 1rem 0;
    border-radius: 10px;
  }
  .home-content h1 {
    font-size: 1.5rem;
  }
  .home-content .lead {
    font-size: 1rem;
  }
  .home-actions .btn {
    font-size: 1rem;
    padding: 0.7rem 1.2rem;
  }
}
</style>
