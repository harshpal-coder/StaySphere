<% layout('layouts/boilerplate') %> 
<body>
    <!-- <h3>All Listings</h3> -->

    <style>
            #filters {
                display: flex;
                flex-wrap: wrap;
                align-items: center;
            }

            .filter {
                text-align: center;
                margin-right: 2rem;
                margin-top: 2rem;
                opacity: 0.7;
            }
            .filter:hover {
                opacity: 1;
                cursor: pointer;
            }

            .filter p {
                margin: 0;
                font-size: 0.8rem;
            }

            .gst-info {
                display: none;
                font-size: 0.8rem;
                color: gray;
            }

            .tax-switch{
                border: 1px solid;
                border-radius: 1rem;
                height: 3.5rem;
                padding: 1rem;
                margin-left: 4em;
                display: flex;
                align-items: center;
                margin-top: 2rem;
            }

    </style>

     <div id="filters">
            <div class="filter">
            <div><i class="fa-solid fa-fire-flame-curved"></i></div>
            <p>Popular</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Bedrooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-city"></i></div>
                <p>Iconic Cities</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cable-car"></i></div>
                <p>Mountains</p>

            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing pool</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-route"></i></div>
                <p>Camping</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowman"></i></div>
                <p>Arctic</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Domes</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Himalayas</p>
            </div>

        <div class="tax-switch">
            <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
</div>
        </div>

     </div>

<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 g-4 mt-3">
<% for(let listing of listings) { %>
    <a href="/listings/<%= listing.id %>" class="text-decoration-none text-dark">
        <div class="card col" style="width: 20rem;">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image">
            <div class="card-body">
                <p class="card-text">
                    <b><%= listing.title %></b>
        <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
        <br>
        <i class="gst-info"> +18% GST</i>
    </p>
  </div>
</div>
    </a>
<% } %> 
</div>

</div>
</body>

<script>
    let taxSwitch = document.getElementById('switchCheckDefault');
    taxSwitch.addEventListener('click', () => {
        let gstInfo = document.getElementsByClassName('gst-info');
        for(let info of gstInfo) {
            info.style.display = taxSwitch.checked ? 'inline' : 'none';
        }
    });
       
</script>
